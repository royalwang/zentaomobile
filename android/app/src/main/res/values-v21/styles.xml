<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <!--<item name="android:navigationBarColor">@color/primary</item>-->
    </style>

    <style name="flatButton">
        <item name="android:shadowColor">@null</item>
    </style>

    <style name="transparentButton" parent="flatButton">
        <item name="android:background">@drawable/ripple_transparent</item>
    </style>

    <style name="transparentButtonOval" parent="flatButton">
        <item name="android:background">@drawable/ripple_transparent_oval</item>
    </style>

    <style name="primaryButton" parent="flatButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_primary</item>
    </style>

    <style name="primaryButtonOval" parent="flatButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_primary_oval</item>
    </style>
</resources>
